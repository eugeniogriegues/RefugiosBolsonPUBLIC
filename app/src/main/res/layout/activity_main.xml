<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="google.maps.bolson.refugiosbolson.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"

        android:background="@drawable/fondonuevo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnTipos"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_blue_bright"
            android:onClick="Tipo"
            android:text="VER TODOS"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnRutaHieloAzul"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_blue_dark"
            android:onClick="RutaHieloAzul"
            android:text="HIELO AZUL - NATACIÓN"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnRutaCajonAzul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_purple"
            android:onClick="RutaCajonAzul"
            android:text="LA PLAYITA - CAJÓN DEL AZUL                                              LA TRONCONADA - EL RETAMAL"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnRutaPiltri"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_green_light"
            android:onClick="RutaPiltri"
            android:text=" PILTRIQUITRÓN"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnRutaCerroLindo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_red_light"
            android:onClick="RutaCerroLindo"
            android:text="LOS LAGUITOS - EL CONDE - LA HORQUETA"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnRutaMotoco"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="RutaMotoco"
            android:text="EL MOTOCO"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnRutaEncanto"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorAccent"
            android:onClick="RutaEncanto"
            android:text="ENCANTO BLANCO - DEDO GORDO"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_green_dark"
            android:onClick="Info"
            android:text="*****     INFORMACIÓN     *****"
            android:textSize="18sp"
            android:textStyle="italic" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>